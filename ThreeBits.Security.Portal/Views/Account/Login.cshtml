
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<main>

    <div id="wrapper">

        <div class="content-wrapper">
            <div class="content custom-scrollbar">

                <div id="login-v2" class="row no-gutters">

                    <div class="intro col-12 col-md light-fg">

                        <div class="d-flex flex-column align-items-center align-items-md-start text-center text-md-left py-16 py-md-32 px-12">

                            <div class="logo bg-secondary mb-8">
                                <span>TB</span>
                            </div>

                            <div class="title">
                                Bienvenido al Sistema de Control Escolar!
                            </div>

                            <div class="description pt-2">
                                Administra Usuario, Profesores, Cobranza, etc..
                            </div>

                        </div>
                    </div>

                    <div class="form-wrapper col-12 col-md-auto d-flex justify-content-center p-4 p-md-0">

                        <div class="form-content md-elevation-8 h-100 bg-white text-auto py-16 py-md-32 px-12">

                            <div class="title h5">Ingresa a tu cuenta</div>

                            <div class="description mt-2">Escribe tus credenciasl para poder entrar</div>

                            <form class="mt-8 formAjax" method="post" action="~/Account/Login">

                                <div class="form-group mb-4">
                                    <input type="email" class="form-control" id="sUsuario" name="sUsuario" aria-describedby="emailHelp" placeholder="email@mail.com" required="required" />
                                    <label for="sUsuario">Usuario</label>
                                </div>

                                <div class="form-group mb-4">
                                    <input type="password" class="form-control" id="password" name="password" placeholder="**********" required="required" />
                                    <label for="password">Password</label>
                                </div>

                                <div class="remember-forgot-password row no-gutters align-items-center justify-content-between pt-4">

                                    <div class="form-check remember-me mb-4">
                                        <label class="form-check-label">
                                            <input type="checkbox" name="recordar" class="form-check-input" aria-label="Remember Me" />
                                            <span class="checkbox-icon"></span>
                                            <span class="form-check-description">Recordar</span>
                                        </label>
                                    </div>

                                    <a href="~/Account/RecuperarCuenta" class="forgot-password text-secondary mb-4">Olvidaste tu Password?</a>

                                </div>

                                <button class="submit-button btn btn-block btn-secondary my-4 mx-auto btnAjax" aria-label="ENTRAR" type="submit">
                                    ENTRAR 
                                    <img src="~/assets/images/ellipsis.gif" class="loadingAjax"  high="20%" width="15%" style="display:none" />
                                </button>

                            </form>

                            @*<div class="separator">
                                    <span class="text">O</span>
                                </div>

                                <button type="submit" class="google btn btn-block btn-secondary my-2 mx-auto" aria-label="LOG IN">
                                    <span>
                                        <i class="icon-google-plus s-4"></i>
                                        <span>Ingresa con Google</span>
                                    </span>
                                </button>

                                <button  class="facebook btn btn-block btn-secondary my-2 mx-auto" aria-label="LOG IN" type="submit">
                                    <span>
                                        <i class="icon-facebook s-4"></i>
                                        <span>Ingresa con Facebook</span>
                                    </span>
                                </button>*@

                            <div class="register d-flex flex-column flex-sm-row align-items-center justify-content-center mt-8 mb-6 mx-auto">
                                <span class="text mr-sm-2">Aun no tienes cuenta?</span>
                                <a class="link text-secondary" href="~/Account/Registrarme">Crea una cuenta</a>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>


    </div>
    <nav id="footer" class="bg-dark text-auto row no-gutters align-items-center px-6">
        @*<a class="btn btn-secondary text-capitalize" href="http://themeforest.net/item/fuse-angularjs-material-design-admin-template/12931855?ref=srcn" target="_blank">
                <i class="icon icon-cart mr-2 s-4"></i>Purchase FUSE Bootstrap
            </a>*@
    </nav>

</main>
